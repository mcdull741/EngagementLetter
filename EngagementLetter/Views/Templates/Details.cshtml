@model EngagementLetter.Models.Template

@{
    Layout = null; // 用于模态框
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <h6 class="text-muted mb-1">模板信息</h6>
                <p class="mb-1"><strong>模板名称：</strong>@Model.Name</p>
                <p class="mb-1"><strong>关联问卷：</strong>@Model.Questionnaire?.Title</p>
                <p class="mb-1"><strong>优先级：</strong>
                    <span class="badge bg-@GetPriorityBadge(Model.Priority)">@Model.Priority</span>
                </p>
            </div>

            <div class="mb-3">
                <h6 class="text-muted mb-2">启用条件 (@Model.Conditions.Count 个)</h6>
                
                @if (Model.Conditions.Any())
                {
                    <div class="list-group">
                        @foreach (var condition in Model.Conditions.OrderBy(c => c.OrderIndex))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">@condition.Question?.Content</div>
                                        <div class="text-muted small">
                                            <i class="fas fa-filter me-1"></i>
                                            @GetConditionTypeText(condition.ConditionType) 
                                            "@condition.TextResponse"
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">
                                            @(condition.LogicOperator == "AND" ? "与" : "或")
                                        </small>
                                        <div class="text-muted small">#@condition.OrderIndex</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-3">
                        <h6 class="text-muted mb-2">条件逻辑关系</h6>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            所有条件必须同时满足（AND逻辑），系统将自动选择最匹配的模板
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">该模板为无条件模板，适用于所有问卷回答</p>
                    </div>
                }
            </div>

            <div class="mb-3">
                <h6 class="text-muted mb-2">文件信息</h6>
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1"><strong>创建人：</strong>@(Model.CreatedBy ?? "系统")</p>
                        <p class="mb-1"><strong>创建时间：</strong>@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>修改人：</strong>@(Model.UpdatedBy ?? Model.CreatedBy ?? "系统")</p>
                        <p class="mb-1"><strong>修改时间：</strong>@Model.UpdatedDate?.ToString("yyyy-MM-dd HH:mm")</p>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.TemplatePath))
            {
                <div class="mb-3">
                    <h6 class="text-muted mb-2">模板文件</h6>
                    <div class="border rounded p-3">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-file-word fa-2x text-primary me-3"></i>
                            <div>
                                <div class="fw-bold">@Model.FileName</div>
                                <div class="text-muted small">Word文档模板</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetPriorityBadge(int priority)
    {
        return priority switch
        {
            >= 90 => "danger",
            >= 75 => "warning",
            >= 50 => "info",
            >= 25 => "secondary",
            _ => "light"
        };
    }

    string GetConditionTypeText(string conditionType)
    {
        return conditionType switch
        {
            "Equals" => "等于",
            "Contains" => "包含",
            "GreaterThan" => "大于",
            "LessThan" => "小于",
            "NotEquals" => "不等于",
            _ => conditionType
        };
    }
}